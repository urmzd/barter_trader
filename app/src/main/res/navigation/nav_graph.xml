<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment"
    >

    <fragment
        android:id="@+id/splashFragment"
        android:name="ca.dal.bartertrader.presentation.view.SplashFragment"
        android:label="@string/title_splash_fragment_label"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_startUpFragment"
            app:destination="@id/startUpFragment" />
        <action
            android:id="@+id/action_splashFragment_to_providerHomeFragment"
            app:destination="@id/providerHomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="ca.dal.bartertrader.presentation.view.LoginFragment"
        android:label="@string/title_login_fragment_label"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_passwordResetFragment"
            app:destination="@id/passwordResetFragment" />
        <action
            android:id="@+id/action_loginFragment_to_providerHomeFragment"
            app:destination="@id/providerHomeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="ca.dal.bartertrader.presentation.view.RegistrationFragment"
        android:label="@string/title_registration_fragment_label"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/providerHomeFragment"
        android:name="ca.dal.bartertrader.presentation.view.provider_home.ProviderHomeFragment"
        android:label="@string/title_provider_home_fragment_label"
        tools:layout="@layout/fragment_provider_home">
        <action
            android:id="@+id/action_providerHomeFragment_to_handlePostFragment"
            app:destination="@id/handlePostFragment" />
        <action
            android:id="@+id/action_providerHomeFragment_to_splashFragment"
            app:destination="@id/splashFragment" />
        <action
            android:id="@+id/action_providerHomeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/startUpFragment"
        android:name="ca.dal.bartertrader.presentation.view.StartUpFragment"
        android:label="@string/title_start_up_fragment_label"
        tools:layout="@layout/fragment_start_up">
        <action
            android:id="@+id/action_startUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_startUpFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordResetFragment"
        android:name="ca.dal.bartertrader.presentation.view.PasswordResetFragment"
        android:label="@string/title_password_reset_fragment_label"
        tools:layout="@layout/fragment_password_reset" />
    <fragment
        android:id="@+id/handlePostFragment"
        android:name="ca.dal.bartertrader.presentation.view.provider_home.HandlePostFragment"
        android:label="@string/title_handle_post_fragment_label"
        tools:layout="@layout/fragment_handle_post" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="ca.dal.bartertrader.presentation.view.profile.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>